{
  "name": "command-line-time-tracker",
  "version": "2.0.0-0",
  "description": "Time Tracker",
  "type": "module",
  "main": "./src/commands/tt.js",
  "scripts": {
    "lint": "eslint src",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:verbose": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "preversion": "npm run lint && npm test",
    "version": "git add src",
    "postversion": "git push && git push --tags",
    "tt": "node src/commands/tt.js",
    "tt-debug": "DEBUG=tt:* node src/commands/tt.js"
  },
  "author": {
    "name": "Jonathan Keller",
    "email": "keller.jonathan@gmail.com"
  },
  "license": "GPL-3.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/kellerj/command-line-time-tracker.git"
  },
  "bin": {
    "tt": "./src/commands/tt.js"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "inquirer-autocomplete-standalone": "^0.8.1",
    "better-sqlite3": "^9.4.3",
    "chalk": "^5.4.0",
    "commander": "^11.1.0",
    "d3-scale-chromatic": "^3.0.0",
    "date-fns": "^2.30.0",
    "debug": "^4.3.0",
    "easy-table": "1.1.x",
    "fuzzy": "^0.1.3",
    "parse-loose-time": "^1.0.1",
    "sprintf-js": "1.1.x",
    "stream-buffers": "^3.0.1",
    "supports-color": "^9.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "chai": "^5.0.0",
    "chai-as-promised": "^8.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "sinon": "^17.0.0"
  },
  "coverageThreshold-temp": {
    "global": {
      "lines": 90,
      "statements": 90,
      "functions": 90,
      "branches": 75
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "verbose": false,
    "collectCoverage": false,
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": ["js"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/commands",
      "<rootDir>/coverage",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary",
      "text",
      "html"
    ]
  }
}
