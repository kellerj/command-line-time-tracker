{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    // "outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "target": "ESNext",
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}